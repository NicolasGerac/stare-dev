<div class="bg-black w-full flex justify-center items-center h-12	">
  <div class="w-[1152px] flex justify-between">
    <div class="flex gap-5">
      <a href="{{ section.settings.first_social_url }}" target="_blank">
        {% if section.settings.first_social_img != blank %}
          <img
            width="24"
            height="24"
            src="{{ section.settings.first_social_img | image_url: width: 24 }}"
            alt=""
          >
        {% else %}
          {% render 'facebook-icon' %}
        {% endif %}
      </a>
      <a href="{{ section.settings.second_social_url }}" target="_blank">
        {% if section.settings.second_social_img != blank %}
          <img
            width="24"
            height="24"
            src="{{ section.settings.second_social_img |  image_url: width:24 }}"
            alt=""
          >
        {% else %}
          {% render 'instagram-icon' %}
        {% endif %}
      </a>
      <a href="{{ section.settings.third_social_url }}" target="_blank">
        {% if section.settings.third_social_img != blank %}
          <img
            width="24"
            height="24"
            src="{{ section.settings.third_social_img |  image_url: width:24 }}"
            alt=""
          >
        {% else %}
          {% render 'twitter-icon' %}
        {% endif %}
      </a>
    </div>
    <div class=" flex-grow">
      <p class=" text-center text-white">{{ section.settings.information_txt }}</p>
    </div>
    <div>
      <a href="#" class=" flex gap-1 items-center text-white underline">
        contactez-nous <span>{% render 'mail-icon' %}</span>
      </a>
    </div>
  </div>
</div>

